<div id="new-res-modal" class="modal modal-win hide fade modal-thin" tabindex="-1" role="dialog"
     aria-labelledby="NewResModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close modal-close" aria-hidden="true">Ã—
    </button>
    <h3 id="NewResModalLabel">Add new resource</h3>
  </div>
  <div class="modal-body">
    <%= form_for :resource, url: resources_url, html: {
            class: 'form-horizontal modal-form', id: 'new-res-form'} do |f| %>
        <div class="errors">
        </div>
        Add new resource:
        <% %w[name url tags filter].each do |item| %>
            <div class="control-group">
              <%= f.text_field item.to_sym, placeholder: item.titleize %>
            </div>
        <% end %>
        <div>Update checking periodicity:</div>
        <div>
          <%= f.collection_select :schedule_code,
                                  @schedule_codes, :to_s, :to_s, {:selected => 'never'} %>
        </div>

        </div>
    <% end %>
    <div class="modal-footer">
      <button id="new-res-submit" class="btn btn-primary" aria-hidden="true">Add</button>
      <button class="btn modal-close" aria-hidden="true" type="reset">Close</button>
    </div>
    </div>