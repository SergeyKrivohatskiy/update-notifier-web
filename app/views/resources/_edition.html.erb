<div id="dialog-form">
  <%= form_for @resource, :as => :resource, :url => resource_url(@resource.id),
               :method => :put, :html => { :class => 'form-horizontal'} do |f| %>
    Edit resource "<%= @resource.url %>"
    <% %w[name url].each do |item| %>
      <div class="control-group">
        <%= f.text_field item.to_sym, placeholder: item.titleize %>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.text_field :tags, placeholder: 'Tags', value: @tag_string %>
    </div>
    <div>
      <span class="dropup">
        <span>Update checking periodicity: </span>
        <a class="dropdown-toggle" data-toggle="dropdown">
          <span id="resource_shedule_code">
            <%= @shedule_code%>
          </span>
          <b class="caret"></b>
        </a>
        <ul id="menu1" class="dropdown-menu pull-right">
          <li><a href="#" id="very_often">very often</a></li>
          <li><a href="#" id="often">often</a></li>
          <li><a href="#" id="regular">regular</a></li>
          <li><a href="#" id="rarely">rarely</a></li>
          <li><a href="#" id="very_rarely">very rarely</a></li>
          <li><a href="#" id="never">never</a></li>
        </ul>
      </span>
    </div>
    <%= f.submit 'Edit', class: 'btn' %>
  <% end %>
</div>

<script type="text/javascript">
    function addListener(item) {
        $('#'+ item).click(function(e) {
            $('#resource_shedule_code').text(item.replace('_', ' '))
        })
    }
    addListener('very_often')
    addListener('often')
    addListener('regular')
    addListener('rarely')
    addListener('very_rarely')
    addListener('never')
</script>