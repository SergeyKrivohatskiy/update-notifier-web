<% if @resource %>
    <div id="edit-res-form" class="modal hide fade modal-thin" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
      <%= form_for @resource, :as => :resource, :url => resource_url(@resource.id),
                   :method => :put, :html => {:class => 'form-horizontal'} do |f| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true">Ã—
            </button>
            <h3 id="myModalLabel">Add new resource</h3>
          </div>
          <div class="modal-body">
            Edit resource "<%= @resource.url %>"
            <% %w[name url tags].each do |item| %>
                <div class="control-group">
                  <%= f.text_field item.to_sym, placeholder: item.titleize %>
                </div>
            <% end %>
            <div>
              <div>Update checking periodicity:</div>
              <%= f.collection_select :schedule_code,
                                      @schedule_codes, :to_s, :to_s, {:selected => @schedule_code} %>
            </div>

          </div>
          <div class="modal-footer">
            <%= f.submit 'Edit', class: 'btn btn-primary' %>
            <!--<button class="btn btn-primary" data-dismiss="modal" id="edit-res-submit">Edit</button>-->
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
          </div>
      <% end %>
    </div>
<% end %>