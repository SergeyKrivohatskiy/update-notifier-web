<% provide(:title, 'Edit tag') %>

<div id="dialog-form">
  <%= form_for @tag, :as => :tag, :url => tag_path(@tag.id),
               :method => :put, :html => { :class => 'form-horizontal'} do |f| %>
      Edit tag "<%= @tag.name %>"
      <div class="control-group">
        <%= f.text_field :name %>
      </div>
      <%= f.submit 'Edit', class: 'btn' %>
  <% end %>
</div>