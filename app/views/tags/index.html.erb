<h1>Эта страница будет удалена</h1>
<%= link_to 'На главную', controller: :resources, action: :index %>
<br/>
<br/>
<table class="table table-bordered table-striped table-condensed">
  <thead>
  <tr>
    <th style="width: 2%">№</th>
    <th style="width: 44%">Name</th>
    <th style="width: 10%">&nbsp</th>
  </tr>
  </thead>
  <tbody>
  <% @tags.keys.each_with_index do |tag_id, count| %>
    <tr>
      <td><%= count+1 %></td>
      <td><%= @tags[tag_id] %></td>
      <td style="text-align: center">
        <%= link_to 'Edit', edit_tag_url(tag_id), :class => 'btn'%>
      </td>
      <td style="text-align: center">
        <%= link_to 'Delete', tag_url(tag_id),  :method => :delete, :confirm => "Are you sure?", :class => 'btn'%>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>