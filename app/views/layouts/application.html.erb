<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/header' %>
<div class="container">
  <div class="inner-header">
    <%= yield :inner_header %>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <%= yield :sidebar %>
    </div>
    <div class="span9">
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
